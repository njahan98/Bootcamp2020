<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Selenium Test Suite" parallel="false">

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="https://www.facebook.com"/>
    <parameter name="platform" value="mac"/>

    <parameter name="cloud" value="false"/>
    <parameter name="envName" value="browserstack"/>
    <parameter name="browserVersion" value="85.0"/>

    <test name="Automation tests">
        <classes>
            <class name="com.facebooktest.LoginPageValidations"/>
            <class name="com.facebooktest.MainPageValidations"/>
            <class name="com.facebooktest.ProfilePageValidations"/>
        </classes>
    </test>
</suite>